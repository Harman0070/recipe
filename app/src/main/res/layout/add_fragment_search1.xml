
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#fff"
    android:id="@+id/search1"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">
        <android.support.v7.widget.Toolbar
            android:id="@+id/search1Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:background="#f56505"
            android:title="ADD HERE"
            app:layout_collapseMode="parallax"
            />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="95dp"
        android:padding="10dip"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/countryName"
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Country"
            android:inputType="text"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColorHint="#000" />
        <Spinner
            android:background="@drawable/custom_spinner_background"
            android:spinnerMode="dropdown"
            android:id="@+id/spinnerCustom1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Country Not Found?"

            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/countrybt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:text="Click Here To Add Your Country"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="#fa824b"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/categoryName"
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Category"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColorHint="#000" />
        <Spinner
            android:background="@drawable/custom_spinner_background"
            android:spinnerMode="dropdown"
            android:id="@+id/spinnerCustom2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Category Not Found?"/>
        <TextView
            android:id="@+id/categorybt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Click Here To Add Your Category"/>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:backgroundTint="#f56505"
        android:src="@drawable/next"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"/>
</FrameLayout>